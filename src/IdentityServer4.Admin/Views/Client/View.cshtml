@model IdentityServer4.Admin.ViewModels.Client.ViewClientViewModel
@{
    var submitUrl = $"{Context.Request.Path}?returnUrl={ViewData["ReturnUrl"]}";
}
@section breadcrumb{
    <li >
        <a href="#">Client</a>
    </li>
}

@section header{
    Client<small v-text="moduleDescription"></small>
}

<div class="col-xs-12">
<div class="box">
<form action="@submitUrl" method="post">
@await Html.PartialAsync("_ValidationSummary")
@await Html.PartialAsync("_Information")
<div class="box-body">
<div class="row">
    <div class="col-md-3">
        <div class="form-group">
            <label>ClientId</label>
            <input asp-for="ClientId" class="form-control" type="text">
            <span asp-validation-for="ClientId" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>ClientName</label>
            <input asp-for="ClientName" class="form-control" type="text">
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>AllowedGrantTypes</label>
            <select asp-for="AllowedGrantTypes" class="form-control select2">
                <option value="Code">Code</option>
                <option value="Hybrid">Hybrid</option>
                <option value="Implicit">Implicit</option>
                <option value="ClientCredentials">ClientCredentials</option>
                <option value="DeviceFlow">DeviceFlow</option>
                <option value="ResourceOwnerPassword">ResourceOwnerPassword</option>
                <option value="CodeAndClientCredentials">CodeAndClientCredentials</option>
                <option value="HybridAndClientCredentials">HybridAndClientCredentials</option>
                <option value="ImplicitAndClientCredentials">ImplicitAndClientCredentials</option>
                <option value="ResourceOwnerPasswordAndClientCredentials">ResourceOwnerPasswordAndClientCredentials</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>AccessTokenType</label>
            <select asp-for="AccessTokenType" class="form-control select2">
                <option value="Jwt">Jwt</option>
                <option value="Reference">Reference</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>TokenExpiration</label>
            <select asp-for="RefreshTokenExpiration" class="form-control select2">
                <option value="Sliding">Sliding</option>
                <option value="Absolute">Absolute</option>
            </select>
        </div>
    </div>
    
</div>
<div class="row">
    <div class="col-md-1">
        <div class="form-group">
            <label>Enabled</label>
            <select asp-for="Enabled" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>BrowserTokens</label>
            <select asp-for="AllowAccessTokensViaBrowser" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>OfflineAccess</label>
            <select asp-for="AllowOfflineAccess" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>Consent</label>
            <select asp-for="RequireConsent" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>RequirePkce</label>
            <select asp-for="RequirePkce" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>RequireClientSecret</label>
            <select asp-for="RequireClientSecret" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>RememberConsent</label>
            <select asp-for="AllowRememberConsent" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>AllowPlainTextPkce</label>
            <select asp-for="AllowPlainTextPkce" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>IncludeJwtId</label>
            <select asp-for="IncludeJwtId" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>SendClientClaims</label>
            <select asp-for="AlwaysSendClientClaims" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <label>EnableLocalLogin</label>
            <select asp-for="EnableLocalLogin" class="form-control select2">
                <option value="True" selected="selected">True</option>
                <option value="False">False</option>
            </select>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>AllowedCorsOrigins<small class="text-muted"> split via ;</small></label>
            <textarea style="height: 60px;" asp-for="AllowedCorsOrigins" class="form-control" type="text"></textarea>
            <span asp-validation-for="AllowedCorsOrigins" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>RedirectUris<small class="text-muted"> split via ;</small></label>
            <textarea style="height: 60px;" asp-for="RedirectUris" class="form-control" type="text"></textarea>
            <span asp-validation-for="RedirectUris" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>PostLogoutRedirectUris<small class="text-muted"> split via ;</small></label>
            <textarea style="height: 60px;" asp-for="PostLogoutRedirectUris" class="form-control" type="text"></textarea>
            <span asp-validation-for="PostLogoutRedirectUris" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Scopes<small class="text-muted"> split via space</small></label>
            <textarea style="height: 60px;" asp-for="AllowedScopes" class="form-control" type="text"></textarea>
            <span asp-validation-for="AllowedScopes" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>ClientUri</label>
            <input asp-for="ClientUri" class="form-control" type="text">
            <span asp-validation-for="ClientUri" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>LogoUri</label>
            <input asp-for="LogoUri" class="form-control" type="text">
            <span asp-validation-for="LogoUri" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <div class="form-group">
            <label>IdentityTokenLifetime</label>
            <input asp-for="IdentityTokenLifetime" class="form-control" type="number">
            <span asp-validation-for="IdentityTokenLifetime" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label>AccessTokenLifetime</label>
            <input asp-for="AccessTokenLifetime" class="form-control" type="number">
            <span asp-validation-for="AccessTokenLifetime" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label>AuthorizationCodeLifetime</label>
            <input asp-for="AuthorizationCodeLifetime" class="form-control" type="number">
            <span asp-validation-for="AuthorizationCodeLifetime" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label>AbsoluteRefreshTokenLifetime</label>
            <input asp-for="AbsoluteRefreshTokenLifetime" class="form-control" type="number">
            <span asp-validation-for="AbsoluteRefreshTokenLifetime" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label>UserSsoLifetime</label>
            <input asp-for="UserSsoLifetime" class="form-control" type="number">
            <span asp-validation-for="UserSsoLifetime" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label>ProtocolType</label>
            <select asp-for="ProtocolType" class="form-control select2" style="width: 100%;">
                <option value="oidc" selected="selected">OpenIdConnect</option>
                <option value="wsfed">WsFederation</option>
                <option value="saml2p">Saml2p</option>
            </select>
        </div>
    </div>
</div>
<div class="row">


</div>
<div class="row">
    <div class="col-md-9">
        <div class="form-group">
            <label>Description</label>
            <textarea style="height: 100px" asp-for="Description" class="form-control" type="text"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
</div>
</div>
<!-- /.box-body -->
<div class="box-footer clearfix">
    <button type="submit" class="btn btn-default btn-sm  btn-flat">Submit</button>
</div>
</form>
</div>
<!-- /.box -->
</div>

@section scripts{
    <script>
        $(function() {
            app.activeMenu('Client');
        })
    </script>
}