@using IdentityServer4.Admin.Infrastructure
@model IdentityServer4.Admin.ViewModels.Account.LoginViewModel
@inject AdminOptions Options;
@{
    Layout = "_FrameworkLayout";
}

@section title{
    <title>@Options.SiteName | 登录</title>
}

<div class="login-box">
    <div class="login-logo">
        <a>
            <b>@Options.SiteName</b>
        </a>
    </div>

    <!-- /.login-logo -->
    <div class="login-box-body">
        <form asp-route="Login">
            @await Html.PartialAsync("_ValidationSummary")
            <input type="hidden" asp-for="ReturnUrl"/>
            <div class="form-group has-feedback">
                <input asp-for="Username" type="text" class="form-control" placeholder="用户名">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Password" type="password" class="form-control" placeholder="密码">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input asp-for="RememberLogin" type="checkbox"> 记住我
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button name="button" value="login" type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        @*<div class="social-auth-links text-center">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                <i class="fa fa-facebook"></i> Sign in using
                Facebook
            </a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                <i class="fa fa-google-plus"></i> Sign in using
                Google+
            </a>
        </div>*@
        <!-- /.social-auth-links -->

        <br>
        <a href="/Account/ForgotPassword">忘记密码</a>
        <br>
        @if (Options.OpenRegister)
        {
            <a href="/Account/Register">注册</a>
            <br>
        }
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

@section scripts
{
    <environment names="Development">
        <script src="~/js/login.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/login.min.js" asp-append-version="true"></script>
    </environment>
}